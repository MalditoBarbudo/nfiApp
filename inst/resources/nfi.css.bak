/*
Custom css for NFI app.
Citations:
  - input, div.outer, #cite and #controls taken from superzip shiny example
    (https://github.com/rstudio/shiny-examples/blob/master/063-superzip-example/styles.css)
*/

input[type="number"] {
  max-width: 80%;
}

/* map container */
div.outer {
  position: fixed;
  top: 41px;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  padding: 0;
}

/* table container */
div.inner {
  position: fixed;
  top: 45px;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 50px;
  overflow: auto;
}

div.table_container {
  overflow-y: scroll;
}

/* Position and style citation */
#cite {
  position: absolute;
  bottom: 10px;
  left: 10px;
  font-size: 12px;
}

/* debug */
#debug {
  z-index: 1500;
}

/* Controls */
#dataControls {
  /* Appearance */
  background-color: #bdc3c7;
  padding: 0 20px 20px 20px;
  cursor: move;
  border-radius: 8px;
  /* Fade out while not hovering */
  opacity: 0.65;
  zoom: 0.9;
  transition: opacity 1s 100ms;
  z-index: 1000;
}
#dataControls:hover {
  /* Fade in while hovering */
  opacity: 0.95;
  transition-delay: 0;
}

